<tal:block tal:define="dummy python:request.set('disable_border', True)"/><html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:main fill-slot="main">
  <div tal:define="order view/order">
    <h1 class="documentFirstHeading">Order Detail</h1>
    <div tal:replace="structure view/order_template" />
    <div tal:define="address order/ship_to|nothing"
         tal:condition="order/ship_to|nothing">
      <h3>Ship to</h3>
      <div>
        <strong tal:content="string:${address/last_name}, ${address/first_name}">Name</strong>
      </div>
      <div tal:content="string:${address/address}. ${address/city}, ${address/state}. ${address/zip}. ${address/country}.">Address</div>
    </div>
    <div tal:define="address order/bill_to|nothing"
         tal:condition="order/bill_to|nothing">
      <h3>Bill to</h3>
      <div>
        <strong tal:content="string:${address/last_name}, ${address/first_name}">Name</strong>
      </div>
      <div tal:content="string:${address/address}. ${address/city}, ${address/state}. ${address/zip}. ${address/country}.">Address</div>
    </div>
    <div tal:condition="order/notes|nothing">
      <h3>Notes</h3>
      <p tal:content="order/notes">Notes</p>
    </div>
    <div tal:condition="order/order_details|nothing"
         tal:content="structure order/order_details"></div>
  </div>
</metal:main>
</body>
</html>
